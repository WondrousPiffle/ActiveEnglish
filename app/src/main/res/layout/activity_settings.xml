<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nuffsaidm8.me.activeenglish.Settings"
    android:background="@drawable/appbackground">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkByTransSwitch"
        android:checked="false"
        android:layout_marginRight="36dp"
        android:layout_alignBottom="@+id/CheckByTransText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/checkbytrans"
        android:id="@+id/CheckByTransText"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/settingsHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settingstext"
        android:id="@+id/settingsHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/resetwait"
        android:id="@+id/resetDayWaitText"
        android:textColor="#ffffff"
        android:layout_below="@+id/CheckByTransText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetDayWaitSwitch"
        android:checked="false"
        android:layout_alignBottom="@+id/resetDayWaitText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cutomize"
        android:background="@drawable/loadup_button_1"
        android:id="@+id/customizeDayWaits"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:onClick="toChoserActivity"
        android:width="100dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/dontShowText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:id="@+id/homeButtonSettings"
        android:onClick="home"
        android:background="@drawable/loadup_button_1"
        android:layout_below="@+id/customizeDayWaits"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:width="100dp"
        android:textColor="#ffffff" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dontShowSwitch"
        android:checked="false"
        android:layout_alignBottom="@+id/dontShowText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/showWarning"
        android:id="@+id/dontShowText"
        android:textColor="#ffffff"
        android:layout_below="@+id/resetDayWaitText"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
