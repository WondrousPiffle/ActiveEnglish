<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.nuffsaidm8.languagevocablearner.EnterVocabActivity"
    android:background="@drawable/appbackground"
    android:gravity="center">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wordBox"
        android:width="300dp"
        android:minHeight="40dp"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:inputType="text"
        android:gravity="center"
        android:layout_below="@+id/enterWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:autoText="false"
        android:backgroundTint="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enterWord"
        android:id="@+id/enterWord"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enterTranslation"
        android:id="@+id/enterTranslation"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_below="@+id/wordBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/translationBox"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:width="300dp"
        android:minHeight="40dp"
        android:gravity="center"
        android:inputType="text"
        android:layout_below="@+id/enterTranslation"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/submit"
        android:gravity="center"
        android:textColor="#ffffff"
        android:onClick="submitToDatabase"
        android:height="50dp"
        android:background="@drawable/loadup_button_1"
        android:layout_below="@+id/enterHint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/opHint"
        android:id="@+id/enterHintLabel"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_below="@+id/translationBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterHint"
        android:width="300dp"
        android:minHeight="40dp"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:inputType="text"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/enterHintLabel"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:backgroundTint="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:id="@+id/homeButtonEnter"
        android:onClick="home"
        android:background="@drawable/loadup_button_1"
        android:layout_below="@+id/submit"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignStart="@+id/submit"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff" />
</RelativeLayout>
